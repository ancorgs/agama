{
  "storage": {
    "boot": {
      "configure": true,
      "device": "/dev/vda"
    },
    "drives": [
      {
        "search": {
          "name": "/dev/vda"
        },
        "ptableType": "gpt",
        "partitions": [
          {
            "search": { "name": "/dev/vda2" },
            "filesystem": {
              "reuse": false,
              "type": "btrfs",
              "btrfsOptions": {
                "snapshots": true
              },
              "path": "/",
              "mountOptions": ["ro"]
            }
          },
          {
            "id": "linux",
            "size": "10 GiB",
            "encryption": {
              "key": "notsecret",
              "method": "luks2"
            },
            "filesystem": {
              "type": "xfs",
              "path": "/home"
            }
          },
          {
            "size": "2 GiB",
            "encryption": {
              "key": "notsecret",
              "method": "luks2"
            },
            "filesystem": {
              "type": "swap",
              "path": "swap"
            }
          }
        ]
      },
      {
        "search": {
          "name": "/dev/vdb"
        },
        "encryption": {
          "key": "notsecret",
          "method": "luks2"
        },
        "filesystem": {
          "type": "ext4",
          "path": "/var/log"
        }
      }
    ]
  }
}
